@section scripts {
    @Scripts.Render("~/bundles/McoApiTool")
}
<script type="text/javascript">alert("@ViewData["Id"]");</script>
<div class="page-header">
    <h1>Welcome to you RoomNet </h1>
</div>


<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Users</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: users">
                    <li>
                        <strong><span data-bind="text: Username"></span></strong>: <span data-bind="text: Username"></span>
                        <small><a href="#" data-bind="click: $parent.getUserDetail">Details</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <!-- ko if:detail() -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detail</h2>
            </div>
            <table class="table">
                <tr><td>Role</td><td data-bind="text: detail().Role"></td></tr>
                <tr><td>Username</td><td data-bind="text: detail().Username"></td></tr>
                <tr><td>Email</td><td data-bind="text: detail().Email"></td></tr>
                <tr><td>Picture</td><td data-bind="text: detail().Picture"></td></tr>
                <tr><td>Hostname</td><td data-bind="text: detail().Hostname"></td></tr>
            </table>
        </div>
    </div>

    <!-- /ko -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add User</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addUser">
                    <div class="form-group">
                        <label for="inputRole" class="col-sm-3 control-label">Role</label>
                        <div class="col-sm-8">
                            <select data-bind="options:roles, optionsText: 'Name', value: newUser.Role"></select>
                        </div>
                    </div>

                    <div class="form-group" data-bind="with: newUser">
                        <label for="inputHostname" class="col-sm-3 control-label">Hostname</label>
                        <div class="col-sm-8">
                            <input type="text" step="any" class="form-control" id="inputHostname" data-bind="value:Hostname" />
                        </div>

                        <label for="inputUsername" class="col-sm-3 control-label">Username</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputUsername" data-bind="value:Username" />
                        </div>

                        <label for="inputEmail" class="col-sm-3 control-label">Email</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="inputEmail" data-bind="value:Email" />
                        </div>

                        <label for="inputPicture" class="col-sm-3 control-label">Picture</label>
                        <div class="col-sm-8">
                            <input type="file" class="form-control" id="inputPicture" data-bind="value:Picture" />
                        </div>

                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>